generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Gender {
  MALE
  FEMALE
  OTHER
  PREFER_NOT_TO_SAY
}

model User {
  id           Int     @id @default(autoincrement())
  email        String  @unique
  password     String
  firstName    String?
  lastName     String?
  gender       Gender?
  country      String?
  bio          String? @db.Text // Good for long descriptions
  profileImage String?

  reviews     Review[]
  readingList ReadingList[]

  @@map("users")
}

model Review {
  id        Int      @id @default(autoincrement())
  bookId    String // Store the book ID from the third-party API
  userId    Int
  rating    Int // Rating from 1-5
  content   String?  @db.Text // Use Text for longer review content
  createdAt DateTime @default(now())

  // Relationship
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Ensure one review per user per book
  @@unique([userId, bookId])
  @@map("reviews")
}

model ReadingList {
  id      Int      @id @default(autoincrement())
  bookId  String
  userId  Int
  addedAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, bookId])
  @@map("reading_list")
}
